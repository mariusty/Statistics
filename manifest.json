{
  
   "name": "Statistics",
  
   "version": "1.1",
  
   "manifest_version": 2,


   "background": {
    
	"scripts": ["background.js"]
  
   },
  

   "permissions": 
	[
    "idle",
    "tabs"
  ],
  

   "browser_action": {
    
	"default_title": "Statistics",
   
	"default_popup": "popup.html"
  
   },
  

   "options_page": 
	"blacklist.html",
 
   
   "content_security_policy": 
	"script-src 'self' 'unsafe-eval' https://www.google.com; object-src 'self'"


 }
